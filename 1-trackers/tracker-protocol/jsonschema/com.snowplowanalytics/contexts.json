{
	"$schema": "http://json-schema.org/schema#",
	"title": "com.snowplowanalytics/contexts/1.0.0",
	"description": "Schema for custom contexts",
	"type": "array",

	"items": {

		"type": "object",

		"properties": {

			"schema": {
					"type": "string",
					"pattern": "^[a-zA-Z0-9_.]+/[a-zA-Z0-9_.]+/[0-9]+.[0-9]+.[0-9]+$"
				},

			"data": {
				"type": "object"
			}
		},

		"required": ["schema", "data"]
	},

	"minItems": 1
}
